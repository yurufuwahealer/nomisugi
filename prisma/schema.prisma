generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== NextAuth ====================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== App Models ====================

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  image         String?
  emailVerified DateTime?
  password      String?
  createdAt     DateTime       @default(now())
  accounts      Account[]
  sessions      Session[]
  habits        Habit[]
  checkins      Checkin[]
  wishes        Wish[]
  weeklyReports WeeklyReport[]
}

model Habit {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // "alcohol" | "tobacco" | "other"
  name      String   // 表示名（例："ビール"）
  dailyCost Int      // 1日あたりの金額（円）
  frequency Int      // 週あたりの日数（現在）
  goalType  String   // "quit" | "reduce" | "challenge30"
  goalDays  Int?     // reduce の場合：週あたり目標日数
  createdAt DateTime @default(now())
}

model Checkin {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime // その日の日付（時刻はJST00:00固定）
  didDrink  Boolean  // true=飲んだ / false=飲まなかった
  amount    Int?     // 飲んだ場合の金額（任意）
  savedYen  Int      // 節約額（飲まなかった場合のみ dailyCost）
  savedKcal Int      // 削減カロリー（飲まなかった場合のみ）
  createdAt DateTime @default(now())

  @@unique([userId, date])
}

model Wish {
  id         String    @id @default(cuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name       String    // 例："AirPods Pro"
  price      Int       // 金額（円）
  emoji      String    // アイコン絵文字
  type       String    // "item" | "invest" | "experience"
  priority   Int       @default(0)
  isAchieved Boolean   @default(false)
  achievedAt DateTime?
  createdAt  DateTime  @default(now())
}

model WeeklyReport {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  weekStart     DateTime
  weekEnd       DateTime
  soberDays     Int
  drinkDays     Int
  savedYen      Int
  savedKcal     Int
  isTransferred Boolean   @default(false)
  transferredAt DateTime?
  createdAt     DateTime  @default(now())
}
